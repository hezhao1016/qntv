<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <display-name></display-name>	
  <welcome-file-list>
    <welcome-file>login.jsp</welcome-file>
  </welcome-file-list>
  <resource-ref>
  	<description>newsDataSource</description>
  	<res-ref-name>jdbc/qntv</res-ref-name>
  	<res-type>javax.sql.DataSource</res-type>
  	<res-auth>Container</res-auth>
  </resource-ref>
  
  
  <servlet>
    <servlet-name>VideoClassServlet</servlet-name>
    <servlet-class>com.qntv.servlet.VideoClassServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>VideoServlet</servlet-name>
    <servlet-class>com.qntv.servlet.VideoServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>UserServlet</servlet-name>
    <servlet-class>com.qntv.servlet.UserServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>VideoNoteServlet</servlet-name>
    <servlet-class>com.qntv.servlet.VideoNoteServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>PasswordClassServlet</servlet-name>
    <servlet-class>com.qntv.servlet.PasswordClassServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>UserCollectServlet</servlet-name>
    <servlet-class>com.qntv.servlet.UserCollectServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>GetJson</servlet-name>
    <servlet-class>com.qntv.servlet.test.TestJsonServlet</servlet-class>
  </servlet>







  <servlet-mapping>
    <servlet-name>VideoClassServlet</servlet-name>
    <url-pattern>/VideoClassServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>VideoServlet</servlet-name>
    <url-pattern>/VideoServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UserServlet</servlet-name>
    <url-pattern>/UserServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>VideoNoteServlet</servlet-name>
    <url-pattern>/VideoNoteServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>PasswordClassServlet</servlet-name>
    <url-pattern>/PasswordClassServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UserCollectServlet</servlet-name>
    <url-pattern>/UserCollectServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>GetJson</servlet-name>
    <url-pattern>/GetJson</url-pattern>
  </servlet-mapping>
</web-app>
